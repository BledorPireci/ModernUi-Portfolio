{
  "name": "portfolio2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "rmdir /s /q dist 2>nul || exit 0",
    "build": "npm run clean && mkdir dist && copy index.html dist\\ && xcopy /E /I assets dist\\assets && npm run build:css && npm run build:js",
    "preview": "vite preview",
    "build:css": "sass style.scss dist/style.min.css --style=compressed",
    "build:js": "terser main.js -o dist/main.min.js --compress --mangle",
    "watch:css": "sass style.scss dist/style.min.css --watch --style=compressed"
  },
  "devDependencies": {
    "csso": "^5.0.5",
    "sass": "^1.85.1",
    "terser": "^5.39.0",
    "vite": "^5.0.8"
  }
}
